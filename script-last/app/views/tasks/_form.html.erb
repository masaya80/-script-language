    <%= form.label :内容, style: "display: block" %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :写真 %>
    <%= form.file_field :photo %>
  </div>


  <div>
    <%= form.submit :タスク追加%>
  </div>
<% end %>
